name: Hedge Monitor (15m)

on:
  schedule:
    - cron: "*/15 * * * *"
  workflow_dispatch:

jobs:
  monitor:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      # No pip installs needed; script uses only the Python stdlib.
      - name: Run hedge monitor
        run: |
          python tools/hedge_monitor.py

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: hedge-monitor-status
          path: artifacts/hedge_monitor_status.txt
